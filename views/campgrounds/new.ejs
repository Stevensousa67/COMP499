<% layout ('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                    <div class="invalid-feedback">
                        <p>Please enter a title.</p>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                    <div class="invalid-feedback">
                        <p>Please enter a location.</p>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL:</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                    <div class="invalid-feedback">
                        <p>Please enter a valid image URL.</p>
                    </div> 
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price-label" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                        <div class="valid-feedback">
                            <p>Looks good!</p>
                        </div>
                        <div class="invalid-feedback">
                            <p>Please enter a valid price.</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                    <div class="valid-feedback">
                        <p>Looks good!</p>
                    </div>
                    <div class="invalid-feedback">
                        <p>Please enter a description.</p>
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>